<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utd.tcep.controllers.PDFPreviewController">
   <children>
      <Label text="Preview - Page 1" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      
      <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="700.0" VBox.vgrow="ALWAYS">
         <content>
            <ImageView fx:id="previewImageView" preserveRatio="true" fitWidth="600" />
         </content>
      </ScrollPane>
      
      <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
         <children>
            <Button fx:id="exportButton" text="Export PDF" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30;" />
            <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30;" />
         </children>
      </HBox>
   </children>
</VBox>
