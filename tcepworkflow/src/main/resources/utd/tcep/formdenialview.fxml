<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <AnchorPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
      <children>
        <VBox fx:id="dialog" maxWidth="400" maxHeight="400" spacing="12.0" alignment="CENTER" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="400.0" AnchorPane.topAnchor="300.0" AnchorPane.bottomAnchor="0.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-alignment: center;">
          <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: black;" text="Deny Transfer" />
            <Label style="-fx-text-fill: black;" text="Fill in denial reason here." wrapText="true" />

            <Label text="Send to" />
            <ComboBox fx:id="denialRecipientCombo" prefWidth="300" />

            <Label text="Reason" />
            <ComboBox fx:id="denialReasonCombo" prefWidth="300" />
            <!-- shown only when user selects Other -->
            <TextField fx:id="denialReasonOtherField" prefWidth="300" promptText="Please specify reason..." visible="false" managed="false" />

            <HBox spacing="10" alignment="CENTER">
              <children>
                <Button text="Confirm" onAction="#confirmDenial" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
                <Button text="Close" onAction="#closeOverlay" />
              </children>
            </HBox>
          </children>
        </VBox>
      </children>
    </AnchorPane>
  </children>
</AnchorPane>
