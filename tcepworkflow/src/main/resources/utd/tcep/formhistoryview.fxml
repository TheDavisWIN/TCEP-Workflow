<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane fx:id="rootpane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="utd.tcep.controllers.TCEPHistoryController">

    <center>
        <VBox spacing="25" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="Back to Form" style="-fx-text-fill: black;" fx:id="backToFormButton" onAction="#handleBackToForm"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <!-- Logo on the left -->
                <ImageView fx:id="utdLogo" fitHeight="50" preserveRatio="true">
                    <image>
                        <Image url="@images/utd_logo.png"/>
                    </image>
                </ImageView>

                <!-- Text next to the logo -->
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="ECS TCEP HISTORY" />

                <!-- Spacer to push the started info to the right -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Started info on the right -->
                <VBox alignment="TOP_RIGHT" spacing="5">
                    <Label style="-fx-font-size: 14px;" text="Started: October 26, 2025" />
                    <Label style="-fx-font-size: 14px;" text="By: First Last" />
                </VBox>
            </HBox>

            <!-- Table container -->
            <VBox spacing="15" style="-fx-padding: 20 0 0 0;" VBox.vgrow="ALWAYS">
                <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Date" />
                        <TableColumn fx:id="actionColumn" text="Action" />
                        <TableColumn fx:id="reviewerColumn" text="Reviewer" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>

