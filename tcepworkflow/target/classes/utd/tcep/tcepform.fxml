<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utd.tcep.TCEPFormController">
    
<left>
    <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="320" spacing="0">
        <children>
            <Button fx:id="formsButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#handleShowFormTable" prefHeight="80.0" style="-fx-font-size: 16px;" text="Forms" />
            <Button fx:id="startEmptyFormButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#handleShowBlankForm" prefHeight="80.0" style="-fx-font-size: 16px;" text="Start Empty Form" />
            <Button fx:id="logoutButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#handleLogout" prefHeight="80.0" style="-fx-font-size: 16px;" text="Logout" />
        </children>
    </VBox>
</left>


    
    <center>
        <VBox prefHeight="915.0" prefWidth="733.0" spacing="25" style="-fx-padding: 30;">
            
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button style="-fx-text-fill: black;" text="View History" />
            </HBox>

           
            <HBox alignment="CENTER_LEFT" spacing="30">
                <VBox spacing="10">
                    <ImageView fx:id="utdLogo" fitHeight="120" fitWidth="120" />
                    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="ECS TCEP FORM" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <VBox alignment="TOP_RIGHT" spacing="5">
                    <Label style="-fx-font-size: 14px;" text="Started: October 26, 2025" />
                    <Label style="-fx-font-size: 14px;" text="By: First Last" />
                </VBox>
            </HBox>

            
            <VBox spacing="25">
               
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Student Name:" />
                <HBox spacing="10">
                    <VBox>
                        <TextField fx:id="firstNameField" prefWidth="150" />
                        <Label text="First" />
                    </VBox>
                    <VBox>
                        <TextField fx:id="lastNameField" prefWidth="150" />
                        <Label text="Last" />
                    </VBox>
                    <VBox>
                        <TextField fx:id="miField" prefWidth="60" />
                        <Label text="M.I." />
                    </VBox>
                </HBox>

               
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Student ID:" />
                <VBox>
                    <TextField fx:id="studentIdField" prefWidth="300" />
                    <Label text="Student ID / NetID" />
                </VBox>

                
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Original Course (Transfer From):" />
                <HBox spacing="10">
                    <VBox>
                        <TextField fx:id="origCourseNum" prefWidth="120" />
                        <Label text="Course Number" />
                    </VBox>
                    <VBox>
                        <TextField fx:id="origCourseTitle" prefWidth="250" />
                        <Label text="Course Title" />
                    </VBox>
                    <VBox>
                        <TextField fx:id="origCreditHours" prefWidth="120" />
                        <Label text="# of Credit Hours" />
                    </VBox>
                </HBox>

                
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Source Institution:" />
                <HBox spacing="10">
                    <VBox>
                        <TextField fx:id="sourceInstitutionName" prefWidth="250" />
                        <Label text="Institution Name" />
                    </VBox>
                    <VBox>
                        <TextField fx:id="sourceInstitutionLocation" prefWidth="200" />
                        <Label text="Institution Location" />
                    </VBox>
                </HBox>

                
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Transfer As (UTD Equivalent):" />
                <HBox spacing="10">
                    <VBox>
                        <TextField fx:id="equivalentCourse" prefWidth="150" />
                        <Label text="Equivalent Course" />
                    </VBox>
                    <VBox>
                        <TextField fx:id="satisfiedRequirement" prefWidth="150" />
                        <Label text="Satisfied Requirement" />
                    </VBox>
                    <VBox>
                        <TextField fx:id="coreDesignation" prefWidth="150" />
                        <Label text="Core Designation" />
                    </VBox>
                </HBox>
            </VBox>

            
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 30 0 0 0;">
                <Button fx:id="acceptButton" maxWidth="Infinity" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Accept" HBox.hgrow="ALWAYS" />
                <Button fx:id="denyButton" maxWidth="Infinity" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Deny" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendBackButton" maxWidth="Infinity" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold;" text="Send Back" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
