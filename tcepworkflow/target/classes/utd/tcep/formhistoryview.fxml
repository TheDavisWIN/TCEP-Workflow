<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="utd.tcep.controllers.FormDetailedController">

    <center>
        <VBox prefHeight="915.0" prefWidth="733.0" spacing="25" style="-fx-padding: 30;">
            
            <!-- Back Button -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backToFormButton"
                        onAction="#handleBackToForm"
                        text="Back to Form"
                        style="-fx-text-fill: black;" />
            </HBox>

            <!-- Title + Logo + Date -->
            <HBox alignment="CENTER_LEFT" spacing="30">
                <VBox spacing="10">
                    <ImageView fx:id="utdLogo" fitHeight="120" fitWidth="120" />
                    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="ECS TCEP HISTORY" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <VBox alignment="TOP_RIGHT" spacing="5">
                    <Label style="-fx-font-size: 14px;" text="Started: October 26, 2025" />
                    <Label style="-fx-font-size: 14px;" text="By: First Last" />
                </VBox>
            </HBox>

            <!-- Table Section: FULL WIDTH & HEIGHT -->
            <VBox spacing="15" 
                  style="-fx-padding: 20 0 0 0;" 
                  VBox.vgrow="ALWAYS">
                <TableView fx:id="historyTable" 
                           VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Date" />
                        <TableColumn fx:id="actionColumn" text="Action" />
                        <TableColumn fx:id="reviewerColumn" text="Reviewer" />
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>
</BorderPane>