<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="utd.tcep.TCEPHistoryController">

    <left>
        <VBox maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308"
              prefWidth="320"
              spacing="0">
            <children>
                <Button fx:id="formsButton"
                        maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308"
                        onAction="#handleShowFormTable"
                        prefHeight="80.0"
                        style="-fx-font-size: 16px;"
                        text="Forms" />
                <Button fx:id="startEmptyFormButton"
                        maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308"
                        onAction="#handleShowBlankForm"
                        prefHeight="80.0"
                        style="-fx-font-size: 16px;"
                        text="Start Empty Form" />
                <Button fx:id="logoutButton"
                        maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308"
                        onAction="#handleLogout"
                        prefHeight="80.0"
                        style="-fx-font-size: 16px;"
                        text="Logout" />
            </children>
        </VBox>
    </left>

    
    <center>
        <VBox prefHeight="915.0" prefWidth="733.0" spacing="25" style="-fx-padding: 30;">
            
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="Back to Form" style="-fx-text-fill: black;" fx:id="backToFormButton" onAction="#handleBackToForm"/>
            </HBox>

            
            <HBox alignment="CENTER_LEFT" spacing="30">
                <VBox spacing="10">
                    <ImageView fx:id="utdLogo" fitHeight="120" fitWidth="120" />
                    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="ECS TCEP HISTORY" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <VBox alignment="TOP_RIGHT" spacing="5">
                    <Label style="-fx-font-size: 14px;" text="Started: October 26, 2025" />
                    <Label style="-fx-font-size: 14px;" text="By: First Last" />
                </VBox>
            </HBox>

            
            <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
                <TableView fx:id="historyTable" prefHeight="400" prefWidth="800">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="250" />
                        <TableColumn fx:id="actionColumn" text="Action" prefWidth="250" />
                        <TableColumn fx:id="reviewerColumn" text="Reviewer" prefWidth="250" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
