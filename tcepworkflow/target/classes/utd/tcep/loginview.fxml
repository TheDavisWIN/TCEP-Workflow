<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="loginContainer"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="utd.tcep.controllers.LoginController"
      alignment="CENTER"
      spacing="20.0"
      prefWidth="640.0"
      prefHeight="480.0"
      style="-fx-background-color: #f9f9f9;">
    
    <children>
        <Label text="TCEP Workflow">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField"
                   promptText="Enter your Advisor_Email"
                   maxWidth="300.0"
                   prefHeight="40.0"
                   style="-fx-font-size: 14px;" />

        <Button fx:id="loginButton"
                text="Login"
                prefWidth="200.0"
                prefHeight="40.0"
                onAction="#handleLogin"
                style="-fx-background-color: #008542; -fx-text-fill: white; -fx-font-size: 14px;" />

        <Label fx:id="loginMessage"
               textFill="red"
               visible="false" />
    </children>

    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>
</VBox>